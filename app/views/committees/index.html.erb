<p id="notice"><%= notice %></p>

<h1>Listing Committees</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Baner</th>
      <th>Logo</th>
      <th>Id activity</th>
      <th>Id member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.nombre %></td>
        <td><%= committee.descripcion %></td>
        <td><%= committee.baner %></td>
        <td><%= committee.logo %></td>
        <td><%= committee.id_activity %></td>
        <td><%= committee.id_member %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

